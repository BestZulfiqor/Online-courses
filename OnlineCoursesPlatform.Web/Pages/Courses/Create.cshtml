@page
@model OnlineCoursesPlatform.Web.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Создать курс";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Course.Title" class="form-label">Название курса</label>
                            <input asp-for="Course.Title" class="form-control" />
                            <span asp-validation-for="Course.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Course.Description" class="form-label">Описание</label>
                            <textarea asp-for="Course.Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Course.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Course.Price" class="form-label">Цена (сомони)</label>
                            <input asp-for="Course.Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Course.Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Course.ImageUrl" class="form-label">URL изображения</label>
                            <input asp-for="Course.ImageUrl" class="form-control" />
                            <span asp-validation-for="Course.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Создать курс</button>
                            <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
